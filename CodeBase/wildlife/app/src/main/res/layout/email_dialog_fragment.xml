<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="24dp"
        android:paddingTop="24dp"
        android:text="Email Entry Data"
        android:textColor="@color/colorPrimaryText"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/subtitle_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_new"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:textColor="@color/colorSecondaryText"
        android:text="Pick an Entry to Email" />

    <EditText
        android:id="@+id/name_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle_new"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="text"
        android:hint="Name new entry"/>

    <Button
        android:id="@+id/send_entry"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/name_collection"
        android:layout_marginRight="24dp"
        android:text="SEND" />

    <Button
        android:id="@+id/cancel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:layout_alignBaseline="@+id/send_entry"
        android:layout_alignBottom="@+id/send_entry"
        android:layout_toLeftOf="@+id/send_entry"
        android:layout_toStartOf="@+id/send_entry" />

</RelativeLayout>