<RelativeLayout
    android:id="@+id/fragment_collection"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.drury.mcs.wildlife.Fragment.Collection">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.RecyclerView
        android:id="@+id/collection_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_collection"
        android:src="@android:drawable/ic_input_add"
        android:tint="@android:color/white"
        app:fabSize="normal"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_above="@+id/email_collection"
        android:layout_alignLeft="@+id/email_collection"
        android:layout_alignStart="@+id/email_collection" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/email_collection"
        android:src="@android:drawable/ic_dialog_email"
        app:fabSize="normal"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin = "16dp" />


</RelativeLayout>
